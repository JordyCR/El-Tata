<ScrollView android:id="@+id/fondo_view"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.pid2.tata.ui.DetallesReporteActivity">


	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<TextView
			android:id="@+id/lblFecha"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:text="19/Ago/15"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<TextView
			android:id="@+id/lblNombrePaciente"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/lblFecha"
			android:text="Ismael Castillo"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="28dp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/lblObservacion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/lblNombrePaciente"
			android:layout_marginTop="38dp"
			android:text="Observaciones:"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold|italic"/>

		<TextView
			android:id="@+id/lblDetalleObservacion"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/lblObservacion"
			android:maxLines="8"
			android:singleLine="false"
			android:text="A pesar del malestar que tiene"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<TextView
			android:id="@+id/lblSugerencias"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/lblDetalleObservacion"
			android:layout_marginTop="38dp"
			android:text="Sugerencias:"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold|italic"/>

		<TextView
			android:id="@+id/lblDetalleSugerencia"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/lblSugerencias"
			android:maxLines="8"
			android:singleLine="false"
			android:text="A pesar del malestar que tiene..."
			android:textAppearance="?android:attr/textAppearanceLarge"/>

		<TextView
			android:id="@+id/lblSupervisadoPor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/lblDetalleSugerencia"
			android:layout_marginTop="38dp"
			android:text="Supervisado por:"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textStyle="bold|italic"/>

		<TextView
			android:id="@+id/lblNombreDoctor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/lblSupervisadoPor"
			android:maxLines="8"
			android:singleLine="false"
			android:text="Dr. Profesor Patricio"
			android:textAppearance="?android:attr/textAppearanceLarge"/>

	</RelativeLayout>

</ScrollView>
